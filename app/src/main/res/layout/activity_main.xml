<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/color_fondo">

    <!-- TextView Novedades -->
    <TextView
        android:id="@+id/tvNovedades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="Novedades"
        android:textSize="18sp" />

    <!-- RecyclerView Novedades -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNovedades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNovedades"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"/>

    <!-- TextView Cartelera -->
    <TextView
        android:id="@+id/tvCartelera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartelera"
        android:textSize="18sp"
        android:layout_below="@id/rvNovedades"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"/>

    <!-- RecyclerView Cartelera -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCartelera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCartelera"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"/>

    <!-- TextView Mas Votadas -->
    <TextView
        android:id="@+id/tvMasVotadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mas votadas"
        android:textSize="18sp"
        android:layout_below="@id/rvCartelera"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"/>

    <!-- RecyclerView Mas Votadas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMasVotadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMasVotadas"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"/>

    <!-- TextView Populares -->
    <TextView
        android:id="@+id/tvPopulares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Populares"
        android:textSize="18sp"
        android:layout_below="@id/rvMasVotadas"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"/>

    <!-- RecyclerView Populares -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPopulares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPopulares"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"/>

    <!-- Barra de navegaciÃ³n -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/barra_negra"
        app:menu="@menu/bottom_navigation" />

</RelativeLayout>


